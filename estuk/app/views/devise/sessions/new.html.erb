<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "Email", input_html: {class: "form_control"} %>
    <%= f.input :password, required: false, label: false, placeholder: "Password", input_html: { class: "form-control"} %>

    <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
<% end %>

<%= render "devise/shared/links" %>
